@page
@model DotNetCore_test.Pages.DynamicDisplayFormModel
@{
}

<!Doctype html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Dynamic Form Display Sample</title>
    </head>
    <body>
        <form name="DynamicSampleForm" method="post">
            <table>
                <tr>
                    <td>
                        Field:
                    </td>
                    <td>
                        <input type="text" name="AField"/>
                    </td>
                    
                </tr>
                <tr>
                    <td> Collection :</td>
                    <td>
                        <select name="ACollection" size="2">
                            @foreach(var samplObject in Model.SampleObjectColletion)
                        {
                            <option value="@samplObject.FirstProperty">@samplObject.SecondProperty</option>
                        }
                    </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="Submit" value="Submit" />
                    </td>
                </tr>
            </table>
        </form>
        @Model.Message
    </body>
</html>
